{
    "manifest_version": 2,
    "name": "Powell Developer Tools",
    "short_name": "Powell DevTools",
    "description": "This extension gives access to the developer-specific-version of the Powell JavaScript & CSS files",
    "version": "3.0.1",
    "browser_action": {
        "default_icon": "resources/img/icon19_disabled.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "resources/img/icon16.png",
        "48": "resources/img/icon48.png",
        "128": "resources/img/icon128.png"
    },
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*.sharepoint.com/*"],
            "js": ["powelldevtools.contentscript.js"]
        }
    ],
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*.powell-365.com/",
        "https://*.sharepoint.com/*",
        "http://localhost/*",
        "https://localhost/*",
        "tabs",
        "notifications",
        "storage"
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com https://rawgit.com; object-src 'self'"
}